# Apache 設定ファイル
# セキュリティとパフォーマンスの最適化

# ============================================================================
# セキュリティ設定
# ============================================================================

# 機密ファイルへのアクセス拒否
<FilesMatch "\.(env|log|md5|sh|bak|config|sql)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# ディレクトリリスティングを無効化
Options -Indexes

# サーバー情報の隠蔽
ServerTokens Prod
ServerSignature Off

# セキュリティヘッダーの設定
<IfModule mod_headers.c>
    # XSS攻撃対策
    Header always set X-XSS-Protection "1; mode=block"
    
    # クリックジャッキング対策
    Header always set X-Frame-Options "SAMEORIGIN"
    
    # MIMEタイプスニッフィング対策
    Header always set X-Content-Type-Options "nosniff"
    
    # HTTPSリダイレクト（本番環境でコメントアウト）
    # Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains"
    
    # Content Security Policy
    Header always set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' https://apis.google.com; style-src 'self' 'unsafe-inline'; img-src 'self' data:; connect-src 'self' https://api.openai.com https://api.anthropic.com https://generativelanguage.googleapis.com"
</IfModule>

# ============================================================================
# PHP設定
# ============================================================================

# PHPエラー表示設定（本番環境では Off）
php_flag display_errors On
php_flag log_errors On
php_value error_log logs/php_error.log

# メモリ制限
php_value memory_limit 256M

# 実行時間制限
php_value max_execution_time 60

# アップロードファイルサイズ制限
php_value upload_max_filesize 10M
php_value post_max_size 10M

# セッション設定
php_value session.cookie_httponly 1
php_value session.cookie_secure 0
php_value session.use_strict_mode 1

# ============================================================================
# URL リライト設定
# ============================================================================

RewriteEngine On

# HTTPS リダイレクト（本番環境用）
# RewriteCond %{HTTPS} off
# RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# API エンドポイントのクリーンURL
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^api/(.*)$ api.php [QSA,L]

# Google認証エンドポイント
RewriteRule ^auth/google/?(.*)$ google_auth.php?action=$1 [QSA,L]

# Sheets統合エンドポイント
RewriteRule ^sheets/(.*)$ sheets_integration.php [QSA,L]

# ============================================================================
# キャッシュ設定
# ============================================================================

<IfModule mod_expires.c>
    ExpiresActive On
    
    # 静的ファイルのキャッシュ
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType image/png "access plus 1 month"
    ExpiresByType image/jpg "access plus 1 month"
    ExpiresByType image/jpeg "access plus 1 month"
    ExpiresByType image/gif "access plus 1 month"
    ExpiresByType image/svg+xml "access plus 1 month"
    
    # HTMLファイルは短時間キャッシュ
    ExpiresByType text/html "access plus 1 hour"
    
    # APIレスポンスはキャッシュしない
    ExpiresByType application/json "access plus 0 seconds"
</IfModule>

# Gzip圧縮設定
<IfModule mod_deflate.c>
    SetOutputFilter DEFLATE
    SetEnvIfNoCase Request_URI \
        \.(?:gif|jpe?g|png|ico)$ no-gzip dont-vary
    SetEnvIfNoCase Request_URI \
        \.(?:exe|t?gz|zip|bz2|sit|rar)$ no-gzip dont-vary
</IfModule>

# ============================================================================
# アクセス制御
# ============================================================================

# ログディレクトリの保護
<Directory "logs">
    Order allow,deny
    Deny from all
</Directory>

# 設定ファイルの保護
<Files "config.php">
    Order allow,deny
    Allow from all
</Files>

# バックアップファイルの保護
<FilesMatch "\.bak$">
    Order allow,deny
    Deny from all
</FilesMatch>

# ============================================================================
# CORS設定（開発環境用）
# ============================================================================

<IfModule mod_headers.c>
    # プリフライトリクエストの処理
    Header always set Access-Control-Allow-Origin "*"
    Header always set Access-Control-Allow-Methods "GET, POST, OPTIONS"
    Header always set Access-Control-Allow-Headers "Content-Type, Authorization, X-Requested-With"
    Header always set Access-Control-Max-Age "86400"
    
    # OPTIONSリクエストの処理
    RewriteCond %{REQUEST_METHOD} OPTIONS
    RewriteRule ^(.*)$ $1 [R=200,L]
</IfModule>

# ============================================================================
# エラーページ設定
# ============================================================================

ErrorDocument 404 /agetsite/error.php?code=404
ErrorDocument 403 /agetsite/error.php?code=403
ErrorDocument 500 /agetsite/error.php?code=500

# ============================================================================
# パフォーマンス最適化
# ============================================================================

# KeepAlive有効化
<IfModule mod_headers.c>
    Header set Connection keep-alive
</IfModule>

# ETags無効化（複数サーバー環境での問題回避）
FileETag None

# ============================================================================
# 開発環境特有の設定
# ============================================================================

# 開発用ファイルの表示許可（本番環境では削除）
<Files "*.md">
    Order allow,deny
    Allow from all
</Files>

# ============================================================================
# ログ設定
# ============================================================================

# カスタムログフォーマット
LogFormat "%h %l %u %t \"%r\" %>s %O \"%{Referer}i\" \"%{User-Agent}i\"" combined_custom

# アクセスログ（本番環境では適切なパスに変更）
# CustomLog logs/access.log combined_custom

# エラーログ
# ErrorLog logs/error.log
# LogLevel warn